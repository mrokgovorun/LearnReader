<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/realtiveBySource"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground" >

    <RelativeLayout
        android:id="@+id/relativeBySourceAB"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <LinearLayout
            android:id="@+id/linearDBySourceAB"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/buttonPrime" >

            <TextView
                android:id="@+id/tvTitleBySource"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_weight="100"
                android:gravity="center"
                android:text="@string/DictionaryBySource" />

            <ImageButton
                android:id="@+id/ibtnBySourceDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:src="@android:drawable/ic_menu_delete" />

            <ImageButton
                android:id="@+id/ibtnEdit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/ibtnBySourceMenu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />

        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tvBySourceList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeBySourceAB"
        android:text="Список с подробностями" />

</RelativeLayout>