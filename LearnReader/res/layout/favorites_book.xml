<?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        android:id="@+id/scrollView1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:id="@+id/relativeLibraryBooks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/relativeLibraryBookRecent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true" >

                <Button
                    android:id="@+id/btnRecentBooksLR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mainBackground"
                    android:drawableRight="@drawable/ic_action_expand"
                    android:gravity="center_vertical|center_horizontal|left"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/RecentlyReaded" />

                <LinearLayout
                    android:id="@+id/linearRecentBooksIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnRecentBooksLR"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/BookRecent_1"
                        android:layout_width="100dp"
                        android:layout_height="162dp"
                        android:layout_margin="3dp"
                        android:background="@drawable/button_normal"
                        android:text="@string/TitleOfArticles" />

                    <Button
                        android:id="@+id/BookRecent_2"
                        android:layout_width="100dp"
                        android:layout_height="162dp"
                        android:layout_margin="3dp"
                        android:background="@color/additionalBackground"
                        android:text="@string/TitleOfArticles" />

                    <Button
                        android:id="@+id/BookRecent_3"
                        android:layout_width="100dp"
                        android:layout_height="162dp"
                        android:layout_margin="3dp"
                        android:background="@color/additionalBackground"
                        android:text="@string/TitleOfArticles" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLibraryBookFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLibraryBookRecent" >
                
                <Button
                    android:id="@+id/btnFavoritesBooksLR"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/mainBackground"
                    android:drawableRight="@drawable/ic_action_expand"
                    android:gravity="center_vertical|center_horizontal|left"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="@string/Favorites" />

                <LinearLayout
                    android:id="@+id/linearFavoriteBooksIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnFavoritesBooksLR"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal" >
					<RelativeLayout
		                android:id="@+id/relativeLibraryBookAdding"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content" >
			
		                <TextView
		                    android:id="@+id/tvLibraryBooks"
		                    android:layout_width="fill_parent"
		                    android:layout_height="wrap_content"
		                    android:layout_centerVertical="true"
		                    android:layout_marginLeft="16dp"
		                    android:text="@string/Books"
		                    android:textAppearance="?android:attr/textAppearanceLarge" />
	            	</RelativeLayout>			            
        		</LinearLayout>
    		</RelativeLayout>
		</RelativeLayout>
	</ScrollView>
